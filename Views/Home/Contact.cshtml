@{
    ViewData["Title"] = "Contact - Nafis Portfolio";
}

<section class="hero-section text-center text-white" style="min-height: 40vh; padding: 4rem 2rem;">
    <div class="container-fluid position-relative" style="padding: 2rem 2rem; z-index: 2;">
        <h1 class="display-4">Get In Touch</h1>
        <p class="lead">Let's discuss your next project</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center mb-5">
                <h2 class="mb-3">Ready to Start Your Project?</h2>
                <p class="lead">I'm always excited to work on new opportunities and bring ideas to life</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 mb-5">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="card border-0 shadow">
                    <div class="card-body p-4">
                        <h3 class="card-title mb-4">Send Me a Message</h3>
                        <form id="contactForm" asp-action="Contact" asp-controller="Home" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label fw-bold">Full Name *</label>
                                <input type="text" class="form-control form-control-lg" id="name" name="Name"
                                       placeholder="Your full name" required>
                                <div class="invalid-feedback">
                                    Please provide your full name.
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label fw-bold">Email Address *</label>
                                <input type="email" class="form-control form-control-lg" id="email" name="Email"
                                       placeholder="your.email@example.com" required>
                                <div class="invalid-feedback">
                                    Please provide a valid email address.
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="subject" class="form-label fw-bold">Subject</label>
                                <input type="text" class="form-control form-control-lg" id="subject" name="Subject"
                                       placeholder="What's this about?">
                            </div>

                            <div class="mb-4">
                                <label for="message" class="form-label fw-bold">Message *</label>
                                <textarea class="form-control form-control-lg" id="message" name="Message"
                                          rows="6" placeholder="Tell me about your project..." required></textarea>
                                <div class="invalid-feedback">
                                    Please provide a message.
                                </div>
                                <div class="form-text">
                                    <small>Feel free to include project details, timeline, or any specific requirements.</small>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-paper-plane me-2"></i>Send Message
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="contact-info">
                    <div class="mb-5">
                        <h3 class="mb-4">Contact Information</h3>
                        <div class="d-flex align-items-start mb-4">
                            <div class="contact-icon me-3">
                                <i class="fas fa-envelope fa-2x text-primary"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Email</h5>
                                <p class="mb-0">nafisarfat6@gmail.com</p>
                                <small class="text-muted">Response within 24 hours</small>
                            </div>
                        </div>

                        <div class="d-flex align-items-start mb-4">
                            <div class="contact-icon me-3">
                                <i class="fas fa-phone fa-2x text-success"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Phone</h5>
                                <p class="mb-0">+880 123 456 7890</p>
                                <small class="text-muted">Available for urgent matters</small>
                            </div>
                        </div>

                        <div class="d-flex align-items-start mb-4">
                            <div class="contact-icon me-3">
                                <i class="fas fa-map-marker-alt fa-2x text-danger"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Location</h5>
                                <p class="mb-0">Dhaka, Bangladesh</p>
                                <small class="text-muted">Open to remote work worldwide</small>
                            </div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <h4 class="mb-3">Why Work With Me?</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
