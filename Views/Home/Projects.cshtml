@{
    ViewData["Title"] = "Projects - Nafis Portfolio";
}

<section class="hero-section text-center text-white" style="min-height: 40vh; padding: 4rem 2rem;">
    <div class="container-fluid position-relative" style="padding: 2rem 2rem; z-index: 2;">
        <h1 class="display-4">My Projects</h1>
        <p class="lead">Showcase of my work and achievements</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-3">Featured Projects</h2>
                <p class="lead">A collection of projects that demonstrate my skills and passion for development</p>
            </div>
        </div>

        <!-- Project 1 -->
        <div class="row mb-5 align-items-center">
            <div class="col-lg-6 mb-4">
                <div class="project-image">
                    <img src="~/images/project1.jpg" alt="E-Commerce Platform" class="img-fluid rounded shadow">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="project-content">
                    <h3 class="mb-3">E-Commerce Platform</h3>
                    <p class="text-muted mb-3">Full-Stack Web Application</p>
                    <p class="mb-4">
                        A comprehensive e-commerce solution built with ASP.NET Core MVC, featuring user authentication,
                        shopping cart functionality, payment integration, and admin dashboard for inventory management.
                    </p>
                    <div class="mb-4">
                        <h6>Technologies Used:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-primary">ASP.NET Core</span>
                            <span class="badge bg-success">C#</span>
                            <span class="badge bg-info">Entity Framework</span>
                            <span class="badge bg-warning">SQL Server</span>
                            <span class="badge bg-danger">Bootstrap</span>
                            <span class="badge bg-secondary">JavaScript</span>
                        </div>
                    </div>
                    <div class="project-links">
                        <a href="#" class="btn btn-primary me-2">
                            <i class="fas fa-external-link-alt me-1"></i>Live Demo
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fab fa-github me-1"></i>Source Code
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project 2 -->
        <div class="row mb-5 align-items-center flex-row-reverse">
            <div class="col-lg-6 mb-4">
                <div class="project-image">
                    <img src="~/images/project2.jpg" alt="Task Management System" class="img-fluid rounded shadow">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="project-content">
                    <h3 class="mb-3">Task Management System</h3>
                    <p class="text-muted mb-3">Collaborative Web Application</p>
                    <p class="mb-4">
                        A modern task management application with real-time collaboration features, team workspaces,
                        progress tracking, and deadline management. Includes user roles, notifications, and reporting.
                    </p>
                    <div class="mb-4">
                        <h6>Technologies Used:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-primary">ASP.NET Core</span>
                            <span class="badge bg-success">SignalR</span>
                            <span class="badge bg-info">SQL Server</span>
                            <span class="badge bg-warning">jQuery</span>
                            <span class="badge bg-danger">Bootstrap</span>
                            <span class="badge bg-secondary">Real-time Updates</span>
                        </div>
                    </div>
                    <div class="project-links">
                        <a href="#" class="btn btn-primary me-2">
                            <i class="fas fa-external-link-alt me-1"></i>Live Demo
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fab fa-github me-1"></i>Source Code
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project 3 -->
        <div class="row mb-5 align-items-center">
            <div class="col-lg-6 mb-4">
                <div class="project-image">
                    <img src="~/images/project3.jpg" alt="Portfolio Website" class="img-fluid rounded shadow">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="project-content">
                    <h3 class="mb-3">Portfolio Website</h3>
                    <p class="text-muted mb-3">Personal Branding Platform</p>
                    <p class="mb-4">
                        A responsive portfolio website showcasing my skills, projects, and experience. Features
                        interactive animations, contact forms, and modern design principles. Built with performance
                        and user experience in mind.
                    </p>
                    <div class="mb-4">
                        <h6>Technologies Used:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-primary">ASP.NET Core MVC</span>
                            <span class="badge bg-success">C#</span>
                            <span class="badge bg-info">Bootstrap 5</span>
                            <span class="badge bg-warning">CSS3 Animations</span>
                            <span class="badge bg-danger">JavaScript</span>
                            <span class="badge bg-secondary">SMTP Email</span>
                        </div>
                    </div>
                    <div class="project-links">
                        <a href="#" class="btn btn-primary me-2">
                            <i class="fas fa-external-link-alt me-1"></i>Live Demo
                        </a>
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fab fa-github me-1"></i>Source Code
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Project Categories</h2>
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                        <h5>E-Commerce</h5>
                        <p>Online shopping platforms with payment integration</p>
                        <span class="badge bg-primary">2 Projects</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x text-success mb-3"></i>
                        <h5>Collaboration</h5>
                        <p>Team productivity and management tools</p>
                        <span class="badge bg-success">1 Project</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-briefcase fa-3x text-info mb-3"></i>
                        <h5>Business Apps</h5>
                        <p>Enterprise solutions and internal tools</p>
                        <span class="badge bg-info">3 Projects</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-palette fa-3x text-warning mb-3"></i>
                        <h5>Creative</h5>
                        <p>Portfolio websites and creative platforms</p>
                        <span class="badge bg-warning">2 Projects</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Want to Work Together?</h2>
            <p class="lead">I'm always interested in new opportunities and exciting projects</p>
            <a href="/Home/Contact" class="btn btn-primary btn-lg">
                <i class="fas fa-envelope me-2"></i>Get In Touch
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Add hover effects for project cards
        document.querySelectorAll('.project-image img').forEach(img => {
            img.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.05)';
                this.style.transition = 'transform 0.3s ease';
            });

            img.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });
    </script>
}