<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortfolioWebsite</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortfolioWebsite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand animated-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-text">Nafis</span>
                    <span class="brand-accent">Portfolio</span>
                </a>
                <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link animated-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>
                                <span>Home</span>
                                <div class="link-underline"></div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link animated-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fas fa-user me-2"></i>
                                <span>About</span>
                                <div class="link-underline"></div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link animated-link" asp-area="" asp-controller="Home" asp-action="Skills">
                                <i class="fas fa-code me-2"></i>
                                <span>Skills</span>
                                <div class="link-underline"></div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link animated-link" asp-area="" asp-controller="Home" asp-action="Projects">
                                <i class="fas fa-briefcase me-2"></i>
                                <span>Projects</span>
                                <div class="link-underline"></div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link animated-link" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope me-2"></i>
                                <span>Contact</span>
                                <div class="link-underline"></div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - PortfolioWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
